#!/bin/sh

# relaunch DWM if the binary changes, otherwise bail
csum=$(sha1sum "$(command -v dwm)")
new_csum=""
while true
do
	if [ "$csum" != "$new_csum" ]
	then
		csum=$new_csum
		pkill dwmbar
		dwm > /tmp/dwm.log 2> /tmp/dwm.log2
	else
		exit 0
	fi
	new_csum=$(sha1sum "$(command -v dwm)")
	sleep 0.5
done
