#!/bin/sh

# To disable modules place a # in front of the module
# module [module arg currently max 1] [prefix]

modules="#todols ğŸ“
#appointments ğŸ“…
#corona de
#weather
news ğŸ“°
mailbox ğŸ“¬
#cpu ğŸŒ¡ï¸
#memory ğŸ§ 
#disk /dev/sda4 ğŸ’½
pacpackages ğŸ“¦
internet
#battery BAT0
volume"

mrun() {
	if echo $2 | grep -Eq "^[A-Za-z0-9/]+$"; then
		[ "$3" != "" ] && symbol="$3 " || symbol=""
		arg="$2"
	else
		[ "$2" != "" ] && symbol="$2 " || symbol=""
	fi
	tmp=$($1 $arg)

	[ "$tmp" != "" ] && echo "${symbol}${tmp} | "
}

fmodules() {
	IFS='
	'
	for m in $modules; do
		if [ "$m" != "${m#\#}" ]; then
			continue
		fi
		arg1=$(echo $m | awk '{print $1;}')
		arg2=$(echo $m | awk '{print $2;}')
		arg3=$(echo $m | awk '{print $3;}')

		output="$output$(mrun $arg1 $arg2 $arg3)"
	done

	echo $output
}

while true; do
	xsetroot -name "$(fmodules)$(clock)"

	sleep 15
done
